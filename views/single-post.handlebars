<div class="no-hover-card">
    <div class="card-title">
        <h3>{{post.title}}</h3>
        <span>Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
    </div>
    <div class="card-body">
        <span>{{post.body}}</span>
    </div>
</div>
{{#if loggedIn}}
<div class="no-hover-card">
    <div class="card-title">
        <h3>Leave a Comment</h3>
    </div>
    <div class="card-body">
        <form class="form" id="comment-form" data-post-id="{{post.id}}">
            <div class="form-body">
                <label for="comment-body">Comment</label>
                <textarea id="comment-body"></textarea>
            </div>
            <div class="form-buttons">
                <button class="btn" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
{{/if}}
{{#if post.comments}}
    <div class="no-hover-card">
        <div class="card-title">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.comments as |comment|}}
                {{> comment-info comment}}
            {{/each}}
        </div>
    </div>
{{/if}}
<script src="/javascript/add-comment.js" />