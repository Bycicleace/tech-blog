<div class="card">
    <div class="card-title">
        <h3>{{post.title}}</h3>
        <span>Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
    </div>
    <div class="card-body">
        <span>{{post.body}}</span>
    </div>
</div>
{{#if loggedIn}}
<div class="card">
    <div class="card-title">
        <h3>Leave a Comment</h3>
    </div>
    <div class="card-body">
        <form id="comment-form" data-post-id="{{post.id}}">
            <div>
                <label for="comment-body">Comment</label>
                <textarea id="comment-body"></textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
{{/if}}
{{#if post.comments}}
    <div>
        {{#each post.comments as |comment|}}
                {{> comment-info comment}}
        {{/each}}
    </div>
{{/if}}
<script src="/javascript/add-comment.js" />