<div class="no-hover-card">
    <div class="card-title">
        <h3>New Post</h3>
    </div>
    <div class="card-body">
        <form class="form" id="new-post-form">
            <div class="form-title">
                <label for="new-title">Title</label>
                <input type='text' id="new-title" />
            </div>
            <div class="form-body">
                <label for="new-body">Post</label>
                <textarea id="new-body"></textarea>
            </div>
            <div class="form-buttons">
                <button class="btn" type="submit">Create</button>
                <button class="btn" onclick="location.replace('/dashboard')">Cancel</button>
            </div>
        </form>
    </div>
</div>
<script src="/javascript/new-post.js" />